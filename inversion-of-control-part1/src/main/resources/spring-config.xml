<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Bean for the nested class -->
    <bean id="doAction" class="nested_class.SpringBeanService$NestedClass" />

    <!-- Bean for NestedClassDemo -->
    <bean id="demo" class="nested_class.NestedClassDemo">
        <!-- No explicit dependency on applicationContext is needed -->
    </bean>

</beans>
